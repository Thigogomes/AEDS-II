import java.util.*;

public class Ciframento {
	public static String criptografar(String str) {
		int tam = str.length();
		String novaPalavra = "";
		int letra;
		if (str.equals("")) {
		    return "";
		}
		for(int i = 0;  i < tam; i++){
			letra = (int)str.charAt(i) + 3;
			novaPalavra = novaPalavra + (char)letra;
		}
		return novaPalavra;
	}
	
	public static void main(String[] args) {
	    Scanner input = new Scanner(System.in);
	    String str = "";
		int x = 1;
		while(x == 1) {
		    str = input.nextLine();
		    if (str.equals("FIM")) {
                x = -1;
	        } else {
	            System.out.println(criptografar(str));
	        }
		}
	}
}
