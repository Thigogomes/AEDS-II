import java.util.*;

public class SomaDigitos{
    public static int somaDigitos(String digitos, int tam){
        int soma = 0;
        char num;
        for(int i = 0; i < tam; i++){
            num = digitos.charAt(i);
            soma = soma + Character.getNumericValue(num);
        }
        return soma;
    }
    public static int somaDigitos(String digitos){
        int tam = digitos.length();
        return somaDigitos(digitos, tam);
    }
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		String digitos = "";
		int x = 1;
		while(x == 1){
		    digitos = input.nextLine();
		    if(digitos.equals("FIM")){
		        x = -1;
		    }else{
		        System.out.println(somaDigitos(digitos));
		    }
		}
		input.close();
	}
}
