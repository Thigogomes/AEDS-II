#include<stdio.h>
#include<string.h>

void escreverArquivo(char c[], int n);
void imprimirArquivo(char c[], int n);

void escreverArquivo(char c[], int n){
    FILE *arq = fopen(c, "a");
    char linha[100];
    if(arq){
       for(int i = 0; i < n; i++){
           getchar();
           scanf("%[^\n]", linha);
           fprintf(arq, "%s\n", linha);
       }
       fclose(arq);
    }
}

void imprimirArquivo(char c[], int n){
    FILE *arq = fopen(c, "r");
    char linha[100];
    fseek(arq, 0, SEEK_END);
    int x = ftell(arq);
    printf("%d", x);
    if(arq){
        for(int i = 0; i < n; i++){
            fgets(linha, sizeof(linha), arq);
            printf("%s\n", linha);
            int y = ftell(arq);
            printf("%d\n", y);
            fseek(arq, (-x), SEEK_CUR);
        }
        fclose(arq);
    }
}

int main(){
    int n;
    scanf("%d", &n);
    char* arq = ("arquivo.txt");
    escreverArquivo(arq, n);
    imprimirArquivo(arq, n);
    return 0;
}
